<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_template_form_view_combo" model="ir.ui.view">
        <field name="name">product.template.combo.form.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="/form/sheet/div[@class='oe_title']/div[@name='options']" position="inside">
                <field name="is_pack"/>
                <label for="is_pack"/>
            </xpath>

            <xpath expr="/form/sheet/notebook/page[1]/group[1]" position="after">
                <group name="group_standard_price" position="after">
                    <group string="Combo Pack" attrs="{'invisible':[('is_pack','=',False)]}">
                        <field name="wk_product_pack" nolabel="1">
                            <tree editable="bottom">
                                <field name="product_name" options="{'no_create': True}"/>
                                <field name="product_quantity"/>
                            </tree>
                        </field>
                    </group>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
